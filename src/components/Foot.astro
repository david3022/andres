<div
  class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 grid-rows-[repeat(2,_1fr)_0.5fr] w-full gap-4 p-6 bg-black text-gray-400"
>
  <!-- 1. Logo -->
  <div class="flex items-center justify-center bg-black min-h-[8rem]">
    <img src="/blacklogo.png" alt="Logo" class="h-20 sm:h-24 md:h-32" />
  </div>

  <!-- 2. Texto centrado -->
  <div class="flex items-center justify-center bg-black min-h-[8rem]">
    <h2 class="text-base sm:text-lg md:text-xl font-semibold text-center">
      Request An Estimate
    </h2>
  </div>

  <!-- 3. Línea + ícono + texto -->
  <div
    class="flex flex-wrap items-center justify-between bg-black px-4 py-4 min-h-[8rem]"
  >
    <div class="flex-1 flex justify-center items-center">
      <div class="w-full h-0.5 bg-gray-400"></div>
    </div>
    <div class="mx-4 my-2">
      <div
        class="w-10 h-10 rounded-full bg-yellow-500 flex items-center justify-center text-white text-lg font-bold"
      >
        &gt;
      </div>
    </div>
    <div
      class="flex-1 text-sm sm:text-base font-medium text-center sm:text-left"
    >
      Schedule Appointment
    </div>
  </div>

  <!-- 4. Vacío -->
  <div class="bg-black min-h-[8rem]"></div>

  <!-- 5. Teléfono + horarios -->
  <div class="bg-black px-4 py-6 flex flex-col justify-end min-h-[8rem]">
    <div class="mb-2">
      <div class="flex items-center mb-2 flex-wrap">
        <svg
          class="w-5 h-5 text-yellow-500 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M2 3.5A1.5 1.5 0 013.5 2h13A1.5 1.5 0 0118 3.5v13a1.5 1.5 0 01-1.5 1.5h-13A1.5 1.5 0 012 16.5v-13z"
          ></path>
        </svg>
        <span class="font-semibold text-sm sm:text-base">(925) 827-3000</span>
      </div>
      <div class="flex items-center text-xs sm:text-sm">
        <svg
          class="w-4 h-4 text-yellow-500 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 8V5H9v6h4v-1h-2z"></path>
        </svg>
        <span>Mon - Fri, 9am to 4pm<br />Sat, 10am to 3pm</span>
      </div>
    </div>
  </div>

  <!-- 6. Showroom + dirección + ícono -->

  <div
    class="bg-white flex flex-col sm:flex-row justify-between items-center px-4 py-6 min-h-[8rem] space-y-4 sm:space-y-0"
  >
    <div class="text-center sm:text-left">
      <h3 class="text-base sm:text-lg font-bold mb-1 text-black">Showroom</h3>
      <p class="text-sm text-black">
        1256 Diamond Way,<br />Concord, CA 94520
      </p>
    </div>
    <div>
      <div
        class="w-10 h-10 rounded-full bg-yellow-500 flex items-center justify-center text-white text-lg font-bold"
      >
        &gt;
      </div>
    </div>
  </div>

  <!-- 7. Logos en el bottom -->
  <div class="bg-black flex items-end justify-center p-4 min-h-[6rem]">
    <img src="/1.png" alt="Logo 1" class="h-6 sm:h-8 mr-4" />
    <img src="/2.png" alt="Logo 2" class="h-6 sm:h-8" />
  </div>

  <!-- 8. Derechos reservados -->
  <div
    class="bg-black flex items-end justify-center p-4 text-xs text-white text-center min-h-[6rem]"
  >
    2025 Palazzo Kitchens & Baths Remodeling. All Rights Reserved.
  </div>

  <!-- 9. Redes sociales -->
  <div class="bg-black flex items-end justify-end p-4 space-x-4 min-h-[6rem]">
    <img src="/x.png" alt="Facebook" class="h-5 w-5" />
    <img src="/Inst.png" alt="Instagram" class="h-5 w-5" />
    <img src="/h.png" alt="Twitter" class="h-5 w-5" />
  </div>
</div>
