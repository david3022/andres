          <span>info@palazzokb.com</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const banner = document.getElementById('banner')!;
    const overlay = document.getElementById('overlay')!;
    
    // Configuración inicial
    let scale = 1;
    let opacity = 0;
    
    // Función para manejar el scroll
    function handleScroll() {
      // Calcular el progreso del scroll (0 a 1)
      const scrollY = window.scrollY;
      const bannerHeight = banner.offsetHeight;
      const scrollProgress = Math.min(scrollY / bannerHeight, 1);
      
      // Aplicar zoom al fondo (de 1x a 1.5x)
      scale = 1 + (scrollProgress * 0.5);
      banner.style.backgroundSize = `${scale * 100}%`;
      
      // Aplicar oscurecimiento (de 0 a 1.5, limitado a 1)
      opacity = Math.min(scrollProgress * 1.5, 1);
      overlay.style.opacity = opacity.toString();
    }
    
    // Escuchar el evento de scroll
    window.addEventListener('scroll', handleScroll);
    
    // Inicializar
    handleScroll();
  });
</script>